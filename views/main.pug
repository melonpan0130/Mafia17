html
    head
        script(src="/socket.io/socket.io.js")
        script(src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
  crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Racing+Sans+One|Song+Myung&display=swap&subset=korean,latin-ext")
        //- script
            include ../js/gameChat.js
        style
            include ../css/gameChat.css
            include ../css/popup.css
        script
            include ../js/basic.js
            include ../js/gamePlay.js
        script.
    body
        #popup
            table
                tr
                    td: h1(class="title") Mafia
                tr
                    td: label(for="name") Name
                    td: input(type="text" name="name" placeholder="Name" value="dd" id="name")
                tr
                    td: label(for="room") Room
                    td: input(type="text" name="room" placeholder="Room Code" value="dd" id="room")
                tr
                    td(colspan="2" id="enter"): a(onclick="validation()") Enter
        nav Mafia17
        .content
            div: ul(id="history")
            div
                #status 마피아 게임
                #msg: ul(id="messages")
                #chatting
                    form(action="" class="normal")
                        input(type="text" id="m" autocomplete="off" placeholder="메시지를 작성해 주세요")
            #guess
                .gameGuess
                    //- for(var a=0; a<6; a++)
                        .people
                            .face
                            p Mafia
                            p userName
                div
                    .buttons
                        button(onclick="gameStart()") Start
                        button(onclick="exit()") Exit
                    .hidden
                        - var jobs = ['mafia.png', 'police.png', 'doctor.png', 'citizen.png', 'ghost.png', 'spy.png', 'politician.png']
                        for img in jobs
                            .people
                                .face: img(src="/img/job/"+img)
                                p Mafia
                                p userName
            div